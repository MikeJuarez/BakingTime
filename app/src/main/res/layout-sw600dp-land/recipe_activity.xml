<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="michael_juarez.bakingtime.Recipe_Activity">

    <include
        android:id="@+id/recipe_activity_toolbar"
        layout="@layout/app_bar"/>

    <FrameLayout
        android:id="@+id/recipe_container_tablet_left"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_activity_toolbar"
        android:background="@android:color/black"
        android:paddingRight="1dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/recipe_container_tablet_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recipe_container_tablet_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_activity_toolbar">
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
