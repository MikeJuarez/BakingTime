<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@drawable/card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:id="@+id/list_item_recipe_iv"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bakery_goods"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@id/list_item_recipe_iv"
                    android:layout_alignLeft="@id/list_item_recipe_iv"
                    android:background="@drawable/recipe_card_gradient_background"/>
                <TextView
                    android:id="@+id/recipe_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/list_item_recipe_iv"
                    android:layout_alignLeft="@id/list_item_recipe_iv"
                    style="@style/recipe_card_text"
                    android:paddingLeft="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipe_name_tv">
                    <TextView
                        android:id="@+id/recipe_steps_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"/>
                </LinearLayout>

</RelativeLayout>
