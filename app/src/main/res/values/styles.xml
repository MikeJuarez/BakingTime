<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recipe_card">
        <item name="android:background">@drawable/recipe_card_gradient_background</item>
    </style>

    <style name="recipe_card_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="style_toolbar">
        <item name="android:background">@color/toolbar_brown</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">25sp</item>
    </style>

</resources>
